@using Maximiz.Model.Enums
@using Maximiz.InputModels
@model CampaignGroupInputModel

@{
    ViewData["Title"] = "New";
}

@section Styles {
    <link rel="stylesheet" href="~/css/stepwizard.css" />

    <style>
        label {
            font-weight: bold;
        }
    </style>
}

<h1>New Campaign Group</h1>

<br />
<br />
<br />

<div class="container">
    <!--Step navigation buttons-->
    <div class="stepwizard">
        <div class="stepwizard-row row setup-panel">
            <div class="stepwizard-step col-md-2">
                <a href="#step-1" type="button" class="btn btn-primary btn-circle"></a>
                <p><small>Account</small></p>
            </div>
            <div class="stepwizard-step col-md-2">
                <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled"></a>
                <p><small>Marketing</small></p>
            </div>
            <div class="stepwizard-step col-md-2">
                <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled"></a>
                <p><small>Targeting</small></p>
            </div>
            <div class="stepwizard-step col-md-2">
                <a href="#step-4" type="button" class="btn btn-default btn-circle" disabled="disabled"></a>
                <p><small>Schedule</small></p>
            </div>
            <div class="stepwizard-step col-md-4">
                <a href="#step-5" type="button" class="btn btn-default btn-circle" disabled="disabled"></a>
                <p><small>Summary</small></p>
            </div>
        </div>
    </div>

    <form asp-controller="Campaign" asp-action="CreateGroup" method="post" role="form">
        <div class="form-group">
            <label class="control-label text-warning">Campaign</label>
            <div class="row">
                <img style="padding:8px; width:128px; height:48px;" src="https://www.taboola.com/sites/all/themes/taboola2017/images/taboola/logo-blue.png" />
                <img style="padding:8px;  width:96px; border-radius:50%" src="data:image/jpeg;base64," />
                <img style="padding:8px;  width:128px; height:48px;" src="https://www.google.com/images/branding/googlelogo/1x/googlelogo_color_272x92dp.png" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Budget" class="control-label"></label>
            <input asp-for="Budget" class="form-control" />
            <span asp-validation-for="Budget" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BudgetModel" class="control-label"></label>
            <select asp-for="BudgetModel" asp-items="Html.GetEnumSelectList<Maximiz.Model.Enums.BudgetModel>()" class="form-control"></select>
            <span asp-validation-for="BudgetModel" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BidStrategy" class="control-label"></label>
            <select asp-for="BidStrategy" asp-items="Html.GetEnumSelectList<Maximiz.Model.Enums.BidStrategy>()" class="form-control"></select>
            <span asp-validation-for="BidStrategy" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Language" class="control-label"></label>
            <input asp-for="Language" class="form-control" value="NL" readonly />
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BrandingText" class="control-label"></label>
            <input asp-for="BrandingText" class="form-control" />
            <span asp-validation-for="BrandingText" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Utm" class="control-label"></label>
            <input asp-for="Utm" class="form-control" />
            <span asp-validation-for="Utm" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Delivery" class="control-label"></label>
            <select asp-for="Delivery" asp-items="Html.GetEnumSelectList<Maximiz.Model.Enums.Delivery>()" class="form-control"></select>
            <span asp-validation-for="Delivery" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="InitialCpc" class="control-label"></label>
            <input asp-for="InitialCpc" class="form-control" />
            <span asp-validation-for="InitialCpc" class="text-danger"></span>
        </div>

        @* Geo-Location *@
        <div class="form-group row">
            <label>@Html.DisplayNameFor(m => m.LocationInclude)</label>
            <div class="col-sm-12">
                <input id="location_0" type="checkbox" name="@Html.IdFor(m => m.LocationInclude)" value="0" checked disabled />
                @* The disabled checkbox will be ignored and the one below this comment will not be shown but posted (temporary)  *@
                <input id="location_0_temp" type="hidden" name="@Html.IdFor(m => m.LocationInclude)" value="0" />
                <span>United States - Country</span>
            </div>
            <div class="col-sm-12">
                <input id="location_1" type="checkbox" name="@Html.IdFor(m => m.LocationInclude)" value="1" checked disabled />
                @* The disabled checkbox will be ignored and the one below this comment will not be shown but posted (temporary)  *@
                <input id="location_1_temp" type="hidden" name="@Html.IdFor(m => m.LocationInclude)" value="1" />
                <span>Netherlands - Country</span>
            </div>
        </div>

        @* Targeted Devices *@
        <div class="form-group row">
            <label>@Html.DisplayNameFor(m => m.Devices)</label>
            @foreach (Device device in Enum.GetValues(typeof(Device)))
            {
                <div class="col-sm-12">
                    <input id="device_@device" type="checkbox" name="@Html.IdFor(m => m.Devices)" value="@device" @(Model != null && Model.Devices.Contains(@device) ? "checked" : "") />
                    <span>@device</span>
                </div>
            }
        </div>

        @* Start and End Date *@
        <div class="form-group">
            <label asp-for="StartDate" class="control-label"></label>
            <input asp-for="StartDate" placeholder="Immediately" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndDate" class="control-label"></label>
            <input asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        @* Targeted Operating Systems *@
        <div class="form-group row">
            <label>@Html.DisplayNameFor(m => m.OperatingSystems)</label>
            @foreach (OS os in Enum.GetValues(typeof(OS)))
            {
                <div class="col-sm-12">
                    <input id="os_@os" type="checkbox" name="@Html.IdFor(m => m.OperatingSystems)" value="@os" @(Model != null && Model.OperatingSystems.Contains(@os) ? "checked" : "") />
                    <span>@os.ToString()</span>
                </div>
            }
        </div>

        @* Supported Connections *@
        <div class="form-group row">
            <label>@Html.DisplayNameFor(m => m.Connections)</label>
            @foreach (Connection con in Enum.GetValues(typeof(Connection)))
            {
                <div class="col-sm-12">
                    <input id="con_@con" type="checkbox" name="@Html.IdFor(m => m.Connections)" value="@con" @(Model != null && Model.Connections.Contains(@con) ? "checked" : "") />
                    <span>@con.ToString()</span>
                </div>
            }
        </div>

        <a class="btn btn-outline-primary pull-left" href="../">Back</a>
        <button class="btn btn-primary pull-right" type="submit">Create</button>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
