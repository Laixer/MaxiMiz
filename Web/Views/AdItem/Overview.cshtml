@using Maximiz.Model.Entity
@model IEnumerable<AdItem>

@{
    ViewData["Title"] = "Advertisements";
}

<h1>All Advertisements</h1>

<div class="row">
    <div class="col-md-6"></div>
    <div class="col-md-6">
        <input class="form-control" type="text" placeholder="Search" aria-label="Search">
    </div>
</div>

<table class="table table-bordered">
    <tr>
        <th><input id="check_all" name="check_all" type="checkbox" /></th>
        <th>Campaign</th>
        <th>Group</th>
        <th>Title</th>
        <th>Clicks</th>
        <th>Status</th>
        <th>Created</th>
        <th>Content</th>
        <th>Url</th>
        <th>Cpc</th>
        <th>Impressions</th>
    </tr>
    @foreach (Maximiz.Model.Entity.AdItem ad in Model)
    {
<tr>
    <td><input type="checkbox" name="check_ad" id="@ad.Id" /></td>
    <td>N/A</td>
    <td>@ad.AdGroup</td>
    <td>@ad.Title</td>
    <td>@ad.Clicks</td>
    <td>@ad.Status.ToString()</td>
    <td>@ad.CreateDate</td>
    <td><img style="width:100%;" src="@ad.Content" /></td>
    <td>@ad.Url</td>
    <td>@ad.Cpc</td>
    <td>@ad.Impressions</td>
</tr>
    }
</table>