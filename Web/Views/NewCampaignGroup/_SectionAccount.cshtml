@*
    Campaign group creation wizard section for account settings.
*@

@model CampaignGroupFormAllViewModel
<!-- Fieldset for our account properties -->
<fieldset id="fieldsetAccount">

    <!-- Publisher select -->
    <form-group>
        <label>Publisher networks: </label>
        @foreach (var publisher in new EnumViewModelService().GetPublisherOptions())
        {
            <div class="form-row">
                <input class="checkboxPublisher" name="@nameof(CampaignGroupFormAllViewModel.Publishers)" value="@publisher" type="checkbox" />
                <label>@EnumTranslator.TranslatePublisher(publisher)</label>
            </div>
        }
        <div class="errorHolder"></div>
    </form-group>

    <!-- Account select -->
    <form-group class="form-row">
        <label>Taboola account: </label>
        <select id="selectAccountTaboola" name="@nameof(CampaignGroupFormAllViewModel.AccountTaboolaId)">
            @foreach (var account in await new AccountViewModelService().GetAdvertiserAccounts())
            {
                <option value="@account.Id">@account.Name</option>
            }
        </select>
        <div class="errorHolder"></div>
    </form-group>

    <!-- Custom name addon -->
    <form-group class="form-row">
        <label>Campaign name suffix</label>
        <input id="inputCampaignNameSuffix" name="@nameof(CampaignGroupFormAllViewModel.CampaignNameSuffix)" type="text" placeholder="My campaign" />
        <div class="errorHolder"></div>
    </form-group>

    <!-- Branding text -->
    <form-group class="form-row">
        <label>Branding text</label>
        <input id="inputBrandingText" name="@nameof(CampaignGroupFormAllViewModel.BrandingText)" type="text" placeholder="My branding text" />
        <div class="errorHolder"></div>
    </form-group>

    <!-- URL -->
    <form-group class="form-row">
        <label>URL</label>
        <input id="inputUrl" name="@nameof(CampaignGroupFormAllViewModel.Url)" type="url" placeholder="https://www.targeturl.com" />
        <div class="errorHolder"></div>
    </form-group>

    <!-- Custom UTM code -->
    <form-group class="form-row">
        <label>Custom utm tags</label>
        <input id="inputUtmCustom" name="@nameof(CampaignGroupFormAllViewModel.UtmCustom)" type="text" placeholder="Custom utm tags" />
        <div class="errorHolder"></div>
    </form-group>

    <!-- Submit button -->
    <div class="form-row">
        <button id="buttonNextAccount" class="btn text-white btn-main btn-blue mt-5">Next</button>
    </div>

</fieldset>




