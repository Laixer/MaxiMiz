@*
    Partial view containing scheduling options for a single campaign.
*@

@model CampaignDetailsViewModel
<!-- Schedule tab -->
<form id="formTabSchedule">
    <fieldset>

        <!-- TODO Remove this debug -->
        <label>Dit overleg ik even met Kaan zodra hij er weer is. Input komt door bij de controller!</label>
        <br />

        <!-- Start date -->
        <!-- TODO Fix this very ugly hard coded formatting -->
        <form-group>
            <label>Campaign start date: </label>
            <input id="datetimeStartDate" name="@nameof(FormCampaignDetailsViewModel.StartDate)" 
                   type="datetime-local" value="@((Model.Campaign.StartDate ?? DateTime.Now).ToString("yyyy-MM-dd HH:mm:ss").Replace(' ','T'))" />
        </form-group>

        <!-- End date -->
        <form-group>
            <label>Campaign end date: </label>
            <input id="datetimeEndDate" name="@nameof(FormCampaignDetailsViewModel.EndDate)"
                   type="datetime-local" value="@((Model.Campaign.EndDate ?? DateTime.Now).ToString("yyyy-MM-dd HH:mm:ss").Replace(' ','T'))" />

            <!-- Infinite or not -->
            <input id="checkboxIgnoreEndDate" type="checkbox" name="@nameof(FormCampaignDetailsViewModel.IgnoreEndDate)"
                   value="true" checked="@(Model.Campaign.EndDate == null)" />
            <label>None</label>

            <div class="errorHolder"></div>
        </form-group>

        <!-- Submit button -->
        <button class="buttonSaveCampaignDetails btn text-white btn-main btn-blue mt-5 float-right">Save</button>

    </fieldset>
</form>