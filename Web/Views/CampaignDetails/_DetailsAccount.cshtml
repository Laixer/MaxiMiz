@*
    Partial view containing the account details for a single campaign.
*@

@model CampaignDetailsViewModel
<!-- Account tab -->
<form id="formTabAccount">
    <fieldset>

        <!-- Account informatiton display -->
        <div class="campaign form-group">
            <div class="form-subgroup mb-3">
                <h1 class="mb-4">Account</h1>
                <label for="campaign">Publisher</label>
                <div class="ml-0">
                    <div>@Model.Campaign.Publisher</div>
                </div>
                <div class="form-group my-4">
                    <label for="campaignAccount">Account</label>
                    <div>@Model.Account.Name</div>
                </div>
            </div>
        </div>

        <div class="info form-group">
            <div>
                <div class="form-subgroup">
                    <div class="form-row">

                        <!-- Campaign name -->
                        <form-group>
                            <div class="form-group col-md-6">
                                <label for="inputCampaignName">Campaign Name</label>
                                <input id="inputCampaignNameSuffix" name="@nameof(FormCampaignDetailsViewModel.CampaignNameSuffix)" type="text"
                                       class="form-control" value="@Model.Campaign.Name" >
                            </div>
                            <div class="errorHolder"></div>
                        </form-group>

                        <!-- Branding Text -->
                        <form-group>
                            <div class="form-group col-md-6">
                                <label for="inputBranding">Branding Text</label>
                                <input id="inputBrandingText" name="@nameof(FormCampaignDetailsViewModel.BrandingText)" type="text"
                                       class="form-control" value="@Model.Campaign.BrandingText" >
                                <small id="brandingHelp" class="form-text text-muted"><i>Apears below headline</i></small>
                            </div>
                            <div class="errorHolder"></div>
                        </form-group>

                    </div>

                    <div class="form-row">

                        <!-- Custom UTM -->
                        <form-group>
                            <div class="form-group col-md-6">
                                <label for="inputTrackingCode">Tracking Code</label>
                                <input disabled type="text" class="form-control" value="@Model.Campaign.Utm">
                                <input id="inputUtmCustom" name="@nameof(FormCampaignDetailsViewModel.UtmCustom)" type="text"
                                       class="form-control" placeholder="Put your custom utm tags here">
                            </div>
                            <div class="errorHolder"></div>
                        </form-group>

                        <!-- Target url -->
                        <form-group>
                            <div class="form-group col-md-6">
                                <label for="inputURL">URL</label>
                                <input id="inputUrl" name="@nameof(FormCampaignDetailsViewModel.Url)" type="text" 
                                       class="form-control" value="@Model.Campaign.TargetUrl">
                            </div>
                            <div class="errorHolder"></div>
                        </form-group>

                    </div>

                    <!-- Submit button -->
                    <button class="buttonSaveCampaignDetails btn text-white btn-main btn-blue mt-5 float-right">Save</button>

                </div>
            </div>
        </div>

    </fieldset>
</form>